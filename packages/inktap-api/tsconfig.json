{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "paths": {
      "@types": ["./@types"],
      "@constants": ["./constants.ts"],
      "@src/*": ["./*"],
      "@utils": ["./utils"]
    },
    "typeRoots": ["./src/@types", "node_modules/@types"]
  }
}
